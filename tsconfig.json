{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [ "es2019", "dom" ],
    "moduleResolution": "node",
    "rootDir": "./",
    "inlineSourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "exclude": [ "node_modules", "build", "webpack" ],
  "types": [ "typePatches" ]
}